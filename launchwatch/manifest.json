{
    "manifest_version": 3,
    "name": "Dex Hover for X",
    "version": "1.0",
    "description": "Hover Solana memecoin tickers on X and view live Dexscreener charts.",
    "permissions": ["activeTab", "scripting"],
    "host_permissions": ["*://*.x.com/*", "https://api.dexscreener.com/*"],
    "content_scripts": [
      {
        "matches": ["*://*.x.com/*"],
        "js": ["content.js"],
        "css": ["styles.css"]
      }
    ]
  }